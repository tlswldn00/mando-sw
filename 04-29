#include <iostream>
using namespace std;

const int NUM_student = 10;
const int NUM_subject = 3;

int main()
{
	double scores[NUM_student][NUM_subject];
	double averages[NUM_student];

	for (int i = 0; i < NUM_student; ++i)
	{
		cout << "학생 " << i + 1 << "의 성적을 입력하세요 :\n";
		for (int j = 0; j < NUM_subject; ++j)
		{
			string subject;
			if (j == 0)
				subject = "국어";
			else if (j == 1)
				subject = "영어";
			else if (j == 2)
				subject = "수학";

			cout << subject << " 성적 : ";
			cin >> scores[i][j];
		}
	}

	for (int i = 0; i < NUM_student; ++i)
	{
		double sum = 0;
		for (int j = 0; j < NUM_subject; ++j)
		{
			sum += scores[i][j];
		}
		averages[i] = sum / NUM_subject;
	}
	cout << "\n각 학생의 평균 성적:\n";
	for (int i = 0; i < NUM_student; ++i)
	{
		cout << "학생" << i + 1 << "의 평균 성적:" << averages[i] << endl;
	}
	return 0;
}
